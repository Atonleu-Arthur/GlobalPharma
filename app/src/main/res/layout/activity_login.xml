<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundActivity"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="178dp"
        android:layout_height="46dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/radius"
        android:text="@string/connexion"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/btnRegistration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegistration"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="68dp"
        android:background="@color/backgroundActivity"
        android:text="@string/registration"
        android:textColor="@color/textcolorgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnConnect"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/radiusblanc"
        android:hint="@string/name_or_email"
        android:textColor="@color/textcolorgray"
        android:textColorHint="@color/textHintColor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/btnRegistration"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/btnConnect"
        app:layout_constraintTop_toBottomOf="@id/btnRegistration" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/radiusblanc"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#757171"
        android:textColorHint="@color/textHintColor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@id/btnRegistration"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/btnConnect"
        app:layout_constraintTop_toBottomOf="@id/txtName" />

    <Button
        android:id="@+id/btnSubmit2"
        android:layout_width="327dp"
        android:layout_height="50dp"
        android:layout_marginTop="136dp"
        android:layout_marginBottom="128dp"
        android:width="252dip"
        android:background="@drawable/radius"
        android:text="@string/connexion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>