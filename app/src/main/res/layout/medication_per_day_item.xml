<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp">

    <Toolbar
        android:id="@+id/left_bar"
        android:layout_width="120dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toStartOf="@id/date_value"
        app:layout_constraintTop_toTopOf="@id/date_value"
        app:layout_constraintBottom_toBottomOf="@id/date_value"
        android:layout_marginRight="10dp"
        android:background="#000000"
        />

    <TextView
        android:id="@+id/date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:text="Lundi, le 27 Avril 2020"
        />

    <Toolbar
        android:id="@+id/right_bar"
        android:layout_width="120dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="@id/date_value"
        app:layout_constraintTop_toTopOf="@id/date_value"
        app:layout_constraintBottom_toBottomOf="@id/date_value"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_medications_per_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_value"
        android:layout_marginTop="5dp"
        tools:listitem="@layout/medication_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>