<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="363dp"
        android:layout_height="131dp"
        android:background="@drawable/radius2"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="28dp">

        <TextView
            android:id="@+id/Vicinity"
            android:layout_width="238dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="97dp"
            android:layout_marginRight="97dp"
            android:layout_marginBottom="21dp"
            android:text="Douala"
            android:textColor="#8E8B8B"
            android:textSize="15sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="78dp" />

        <TextView
            android:id="@+id/placeName"
            android:layout_width="315dp"
            android:layout_height="37dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginBottom="80dp"
            android:text="Pharmacie de Douala"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="78dp" />

        <Button
            android:id="@+id/btnPharmacie2"
            android:layout_width="103dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="206dp"
            android:layout_marginRight="206dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/radius"
            android:drawableLeft="@drawable/icons8_route_100px"
            android:text="Direction"
            android:textAlignment="center"
            android:textColor="@color/blanc"
            android:textSize="12dp"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/BtnCallPharmacy"
            android:layout_width="79dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="275dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="59dp"
            android:background="@drawable/radius2"
            android:drawableLeft="@drawable/icons8_phone_100px_1"
            android:gravity="center_vertical"

            android:text="Appeler"
            android:textAlignment="center"
            android:textColor="@color/textHintColor"
            android:textSize="10dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>













