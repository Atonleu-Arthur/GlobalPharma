<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="220dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="12dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="350dp"
        android:layout_height="179dp"
        android:background="@drawable/radius2"
        tools:ignore="DuplicateIds,MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/txt_titre"
            android:layout_width="90dp"
            android:layout_height="21dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="245dp"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="143dp"
            android:text="COVID-19"
            android:textColor="@color/textcolor"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="78dp" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="106dp"
            android:layout_height="95dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="235dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="35dp"
            android:text="La COVID-19 est apparue chez des clients du marché aux poissons de Wuhan, il s'agit d'un ..."
            android:textAlignment="center"
            android:textColor="#8E8B8B"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:layout_editor_absoluteX="114dp"
            tools:layout_editor_absoluteY="78dp" />

        <Button
            android:id="@+id/BtnCallPharmacy"
            android:layout_width="98dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="243dp"
            android:layout_marginLeft="243dp"
            android:layout_marginTop="151dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/radius2"
            android:drawableRight="@drawable/icons8_more_than_120px_2"
            android:gravity="center_vertical"

            android:text="Découvrir"
            android:textAlignment="center"
            android:textColor="#252424"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_actu"
            android:layout_width="203dp"
            android:layout_height="match_parent"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="124dp"
            android:layout_marginRight="124dp"
            app:srcCompat="@drawable/corona" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>













